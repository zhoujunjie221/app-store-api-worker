{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "WebWorker"],
    "types": ["@cloudflare/workers-types"],
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "worker.js",
    "index.js",
    "lib/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
